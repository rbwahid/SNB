@model  SNB.Web.Models.AreaModel
@{
    ViewBag.Title = "Area";
}
@using (Html.BeginForm("Add", "Area", FormMethod.Post, new { @class = "form-horizontal", @id = "AreaCreateForm" }))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">Add Or Edit</h5>
        </div>
        <hr class="hr-mar-reduce" />
        <div class="card-body">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id, new { @id = "AreaId" })
            @Html.Hidden("InitialAreaName", "undefined")
            <div class="form-group row">
                @Html.LabelFor(model => model.DistrictId, new { @class = "col-sm-4" })
                <div class="col-sm-8">
                    @Html.DropDownListFor(model => model.DistrictId, new SelectList(Model.DistrictList, "Id", "DistrictName"), "--Choose--", new { @class = "form-control input-sm" })
                    @Html.ValidationMessageFor(model => model.DistrictId)
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.AreaName, new { @class = "col-sm-4" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(model => model.AreaName, new { @class = "form-control input-sm" })
                    @Html.ValidationMessageFor(model => model.AreaName)
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index","Area")" class="btn btn-danger btn-custom"><i class="fa fa-times-circle text-white"></i> Cancel</a>
                <button type="submit" id="submitButton" class="btn  bg-teal btn-custom pull-right "><i class="fa fa-save"></i> Save</button>
            </div>
        </div>
    </div>
}