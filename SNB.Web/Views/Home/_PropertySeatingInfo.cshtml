@model SNB.Entities.SeatingAllocation

@{
    var imageUrl = Model.ImageCollection.Any() ? 
        Model.ImageCollection.FirstOrDefault().AttachementFile.FileLocation : 
        "~/Content/images/home.png";

 }

<!-- Card with image and button -->
<div class="card">
    <div class="card-img-actions mx-1 mt-1">
        <img class="card-img img-fluid seat-img" src="@Url.Content(imageUrl)" alt="Image">
        <div class="card-img-actions-overlay card-img">
            <a href="@Url.Content(imageUrl)" data-popup="lightbox" class="btn btn-outline bg-white text-white border-white border-2">
                Preview
            </a>
            <a href="#" class="btn btn-outline bg-white text-white border-white border-2 ml-2">
                Details
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="mb-1">
            <h6 class="d-flex font-weight-semibold flex-nowrap mb-0">
                <a href="#" class="text-default mr-2 text-truncate">@Model.SeatingAllocationTitle</a>
                <span class="text-success ml-auto">@Model.Rent.ToString("N0")</span>
            </h6>
        </div>
        <p class="mb-0 text-muted">@Model.SeatingType.TypeName</p>
        <p class="mb-0 text-muted">@Model.Property.Address</p>
        <p class="mb-0 text-muted">@Model.Description</p>
        <a href="#" class="btn bg-indigo-400 btn-block mt-2"><i class="icon-link mr-2"></i> Find out more</a>
    </div>
</div>
<!-- /card with image and button -->
